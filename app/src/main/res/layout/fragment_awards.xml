<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_oscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/list_awards"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:minHeight="224dp"
        android:minWidth="350dp"
        android:src="@drawable/oscars" />

    <TextView
        android:id="@+id/text_feature"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/img_oscar"
        android:layout_alignEnd="@+id/img_oscar"
        android:layout_alignStart="@+id/img_oscar"
        android:background="#66000000"
        android:paddingEnd="20dp"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:text="Oscars® ❯"
        android:textColor="#CCFFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_carousel"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Em breve"
        android:textColor="#CCFFFFFF"
        android:textSize="18dp" />

    <HorizontalScrollView
        android:id="@+id/horizontal_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_carousel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/golden"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/goldenglobe" />

            <ImageView
                android:id="@+id/mtv"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/mtv" />

            <ImageView
                android:id="@+id/palme"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/palme" />

            <ImageView
                android:id="@+id/bafta"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/bafta" />

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>