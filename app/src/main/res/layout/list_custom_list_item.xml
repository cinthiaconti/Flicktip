<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tool_list_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:id="@+id/list_movies_poster"
        android:layout_width="66dp"
        android:layout_height="99dp"
        android:layout_centerVertical="true"
        android:background="@color/dark_grey"
        android:contentDescription="poster" />

    <ProgressBar
        android:id="@+id/list_movies_progressbar"
        android:layout_width="66dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/list_movies_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_movies_poster"
        android:layout_alignTop="@+id/list_movies_poster"
        android:layout_toEndOf="@+id/list_movies_poster"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:paddingEnd="0dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/list_movies_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="The Revenant"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/list_movies_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/list_movies_title"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="O Regresso"
            android:textColor="@color/light_grey" />


        <TextView
            android:id="@+id/list_movies_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/list_movies_subtitle"
            android:layout_marginTop="5dp"
            android:text="2016"
            android:textColor="@color/light_grey" />
    </RelativeLayout>

</RelativeLayout>


